<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eriko.updateditmmockup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http"
                    android:host="www.example.com"
                    android:pathPrefix="/gizmos" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.EventInfobs"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ExhibitorListsbs"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SplashScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.MainMenu"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Ticket"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.RegisterAndLogin"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Register"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Login"
            android:screenOrientation="portrait">

        </activity>
    </application>
</manifest>